            "title": "CPU Usage by API Service",
            "type": "timeseries",
            "gridPos": {
                "h": 8,
                "w": 12,
                "x": 0,
                "y": 0
            },
            "datasource": {
                "type": "prometheus",
                "uid": "${datasource}"
            },
            "fieldConfig": {
                "defaults": {
                    "unit": "percentunit",
                    "custom": {
                        "lineWidth": 2,
                        "fillOpacity": 10,
                        "spanNulls": true,
                        "axisSoftMin": 0
                    }
                },
                "overrides": []
            },
            "options": {
                "tooltip": {
                    "mode": "multi",
                    "sort": "desc"
                },
                "legend": {
