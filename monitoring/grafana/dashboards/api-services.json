                "current": {
                    "text": "Prometheus",
                    "value": "Prometheus"
                }
            },
            {
                "name": "service",
                "type": "query",
                "datasource": {
                    "type": "prometheus",
                    "uid": "${datasource}"
                },
                "query": "label_values(container_cpu_usage_seconds_total, container_label_com_docker_compose_service)",
                "multi": true,
                "includeAll": true,
                "allValue": ".*",
                "current": {
                    "text": "All",
                    "value": "$__all"
                },
                "refresh": 2
            }
        ]
