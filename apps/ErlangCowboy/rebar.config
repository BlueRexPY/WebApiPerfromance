{erl_opts, [debug_info]}.

{deps, [
    {cowboy, "2.12.0"},
    {jsx, "3.1.0"},
    {epgsql, "4.7.1"},
    {poolboy, "1.5.2"},
    {mongodb, "3.0.2"}
]}.

{relx, [
    {release, {erlang_cowboy_api, "0.1.0"},
     [erlang_cowboy_api, sasl]},
    {mode, prod},
    {include_erts, true},
    {extended_start_script, true}
]}.

{profiles, [
    {prod, [
        {relx, [
            {dev_mode, false},
            {include_erts, true}
        ]}
    ]}
]}.
